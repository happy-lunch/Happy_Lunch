<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageView_bag_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_bag_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="TÃªn item"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_bag_img"
        app:layout_constraintStart_toEndOf="@+id/imageView_bag_img"
        app:layout_constraintTop_toTopOf="@+id/imageView_bag_img" />

    <TextView
        android:id="@+id/textView_bag_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="500dp"
        android:layout_marginLeft="500dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView_bag_count"
        app:layout_constraintEnd_toStartOf="@+id/textView_bag_count"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView_bag_img"
        app:layout_constraintTop_toTopOf="@+id/textView_bag_count"
        tools:text="@tools:sample/date/hhmm" />

    <TextView
        android:id="@+id/textView_bag_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:text="Num"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_bag_status"
        app:layout_constraintEnd_toStartOf="@+id/imageView_bag_status"
        app:layout_constraintTop_toTopOf="@+id/imageView_bag_status" />

    <ImageView
        android:id="@+id/imageView_bag_status"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>